@model List<PubsRepository.Models.Author>
@{
    ViewData["Title"] = "Authors";
}
<div class="row" style="margin-top:10px">
    <div class="col-md-10"><h4 style="display:inline">Authors</h4></div>
    <div class="col-md-2">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
<hr />
<table class="table table-bordered table-condensed table-striped table-responsive">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Has Contract?</th>
        <th>Action</th>
    </tr>
    @if (Model != null)
    {
        foreach (PubsRepository.Models.Author author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>
                    @author.Address<br />
                    @author.City, @author.State, @author.PostalCode
                </td>
                <td>@author.PhoneNumber</td>
                <td>
                    @if (author.HasContract)
                    {
                        <input type="checkbox" disabled checked />
                    }
                    else
                    {
                        <input type="checkbox" disabled />
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Author", new { id = author.AuthorID })"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Delete", "Author", new { id = author.AuthorID })"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        }
    }
</table>
